<resources>

    <style name= "NoActionBar" parent = "Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorPrimary">@color/l_gray</item>
    </style>

    <style name="TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxBackgroundColor">@color/white</item>

        <item name="boxStrokeColor">#eeeeee</item>

        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>

        <item name="colorControlActivated">@color/blue_active</item>

    </style>


    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="boxStrokeColor">@color/blue_active</item>
        <item name="android:textColorHint">@color/black</item>

    </style>

    <style name="SplashScreen" parent="NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>


</resources>
